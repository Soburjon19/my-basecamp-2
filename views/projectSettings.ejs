<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body>
    <div class="container">
      <h2>Project Settings</h2>
      <div class="row">
        <div class="col-md-8">
          <% data.map(data=> { %>
          <form
            action="/project/updateProject"
            method="post"
            class="d-flex w-100 flex-column"
          >
            <label>
              Name
              <input
                type="text"
                hidden
                name="id"
                value="<%= data.id %>"
                id=""
              />
              <input
                class="form-control mb-2"
                type="text"
                value="<%= data.name %>"
                name="name"
                id=""
              />
            </label>
            <label>
              Description
              <textarea
                class="form-control mb-2"
                type="text"
                value=""
                name="description"
                id=""
                cols="30"
                rows="5"
              >
<%= data.description %></textarea
              >
            </label>
            <div class="d-flex">
              <button class="btn btn-success mb-2 w-50 me-1" type="submit">
                Update
              </button>
              <a href="/auth/login" class="btn btn-secondary mb-2 ms-1 w-50"
                >Cancel</a
              >
            </div>
          </form>
          <form action="/project/addMember" method="post" class="mt-3">
            <input type="text" name="projectId" hidden value="<%= data.id %>" />
            <input
              required
              type="text"
              name="username"
              placeholder="Add Member (username)"
              class="form-control mb-2"
            />
            <button type="submit" class="btn btn-dark">Add member</button>
          </form>
        </div>
        <div class="col-md-4">
          <a
            href="/project/projectOverview/<%= data.id %>"
            class="btn btn-warning w-100 mb-2"
            >Project overview</a
          >
          <a
            href="/project/deleteProject/<%= data.id %>"
            class="btn btn-danger w-100"
            >Delete Project</a
          >
          <% }) %>
          <h3 class="mt-2 text-center">Members</h3>
          <ul class="list-group mt-2">
            <% if (!(members.length === 0)) { members.map(member=> { %>
            <li class="list-group-item"><%= member.username %></li>
            <% })} else { %>
            <li class="list-group-item">There are no members yet</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
    <script></script>
  </body>
</html>
